<extension version="3.8.0" type="plugin" group="system" method="upgrade">
    <name>PLG_SYSTEM_WEBAUTHN</name>
    <version>rev92C2AD4</version>
    <creationDate>2019-03-07</creationDate>

    <author>Akeeba Ltd</author>
    <authorEmail>no-reply@akeebabackup.com</authorEmail>
    <authorUrl>https://www.akeebabackup.com</authorUrl>

    <copyright>Copyright (c)2016-2019 Akeeba Ltd</copyright>
    <license>GNU GPL v3 or later</license>

    <description>PLG_SYSTEM_WEBAUTHN_DESCRIPTION</description>

    <files>
        <filename plugin="webauthn">webauthn.php</filename>
        <folder>fields</folder>
        <folder>layout</folder>
        <folder>sql</folder>
        <folder>vendor</folder>
        <folder>Webauthn</folder>
    </files>

    <media folder="media" destination="plg_system_webauthn">
        <folder>images</folder>
    </media>

    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.plg_system_webauthn.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_system_webauthn.sys.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                        name="customcss"
                        type="radio"
                        label="PLG_SYSTEM_WEBAUTHN_FIELD_CUSTOMCSS_LABEL"
                        description="PLG_SYSTEM_WEBAUTHN_FIELD_CUSTOMCSS_DESC"
                        default="1"
                        class="btn-group btn-group-yesno"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field
                        name="icon_class"
                        type="text"
                        label="PLG_SYSTEM_WEBAUTHN_FIELD_ICONCLASS_LABEL"
                        description="PLG_SYSTEM_WEBAUTHN_FIELD_ICONCLASS_DESC"
                        default=""
                />
            </fieldset>
        </fields>
    </config>

    <!-- Handle the database installation and updates -->
    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/mysql/install.sql</file>
            <file driver="postgresql" charset="utf8">sql/postgresql/install.sql</file>
            <file driver="sqlazure" charset="utf8">sql/sqlazure/install.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/mysql/uninstall.sql</file>
            <file driver="postgresql" charset="utf8">sql/postgresql/uninstall.sql</file>
            <file driver="sqlazure" charset="utf8">sql/sqlazure/uninstall.sql</file>
        </sql>
    </uninstall>
    <update>
        <schemas>
            <schemapath type="mysql">sql/mysql/updates</schemapath>
            <schemapath type="postgresql">sql/postgresql/updates</schemapath>
            <schemapath type="sqlazure">sql/sqlazure/updates</schemapath>
        </schemas>
    </update>

</extension>
